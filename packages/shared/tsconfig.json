{
	"compilerOptions": {
		"target": "ES2023",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolvePackageJsonExports": true
	},
	"include": ["types/**/*"],
	"exclude": ["node_modules"]
}
